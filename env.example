# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_API_BASE=https://your-proxy/v1  # опционально

# CrewAI Configuration
CREWAI_VERBOSE=true
CREWAI_MEMORY=true

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Web Scraping Configuration
SCRAPING_TIMEOUT=30
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/multi_agent_system.log

# Database Configuration (опционально)
DATABASE_URL=sqlite:///multi_agent_system.db

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Agent Configuration
MAX_ITERATIONS=3
TEMPERATURE=0.3
